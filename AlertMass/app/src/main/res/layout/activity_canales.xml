<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alertmass.appalertmass.alertmass.CanalesActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/lnyTitC"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mis Canales"
            android:id="@+id/textView5"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:paddingRight="50dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibtnAddCanal"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/plus" />
    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstCanales"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblMensajeCanales" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Actualmente no estás suscrito a ningún canal. Por favor selecciona el ícono (+) para suscribirte a canales de difusión."
        android:id="@+id/lblMensajeCanales"
        android:layout_below="@+id/lnyTitC"
        android:layout_margin="10dp" />
</RelativeLayout>
