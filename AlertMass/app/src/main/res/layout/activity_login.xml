<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="#FFFFFF">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />


    <!--<ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="match_parent">-->

        <RelativeLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/img_LogoRegister"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_alertmass"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Correo electronico"
                android:id="@+id/lbl_InfoPassRecover"
                android:layout_below="@id/img_LogoRegister"
                android:gravity="center"
                android:textColor="#ff000000" />

            <AutoCompleteTextView android:id="@+id/txt_EmailRecover" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_email"
                android:inputType="textEmailAddress" android:maxLines="1"
                android:singleLine="true"
                android:layout_below="@+id/lbl_InfoPassRecover" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Password"
                android:id="@+id/lbl_Pass"
                android:layout_below="@+id/txt_EmailRecover"
                android:gravity="center"
                android:textColor="#ff000000" />

            <EditText android:id="@+id/txt_Password" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_password"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified" android:inputType="textPassword"
                android:maxLines="1" android:singleLine="true"
                android:layout_below="@+id/lbl_Pass" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="¿Olvido su contraseña?"
                android:id="@+id/lbl_Olvido"
                android:layout_below="@+id/txt_Password"
                android:gravity="center"
                android:textColor="#005397" />

            <Button android:id="@+id/btn_Entrar"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="Ingresar"
                android:layout_below="@+id/lbl_Olvido"
                android:background="@drawable/button"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                android:padding="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar con Facebook"
                android:id="@+id/btn_IngresoFace"
                android:layout_below="@+id/btn_Entrar"
                android:background="@drawable/button"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:padding="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:id="@+id/btn_Registro"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button"
                android:textColor="#ffffff"
                android:padding="10dp" />

        </RelativeLayout>
    <!--</ScrollView>-->

</LinearLayout>

