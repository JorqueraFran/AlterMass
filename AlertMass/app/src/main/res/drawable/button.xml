<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#51a4dd"
                android:endColor="#59b0ec"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#cccccc" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="6dp"
                />
            <solid
                android:color="#005397"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="1dp"
                android:color="#157EFB"
                />
        </shape>
    </item>
</selector>
